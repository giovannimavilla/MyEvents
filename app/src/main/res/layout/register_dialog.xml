<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/CloseDialogImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
    </ImageView>


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/CloseDialogImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView android:id="@+id/textName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="VISUALIZZA DESCRIZIONE"
            android:textSize="15dp" />

        <TextView android:id="@+id/textEmail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="VISUALIZZA DESCRIZIONE"
            android:textSize="15dp" />

        <Button android:id="@+id/btnOK"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="completa registrazione"
            android:textAlignment="center"
            android:textSize="15dp"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>