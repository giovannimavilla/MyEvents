<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.m01000073.giovanni.myevents.AccountActivity"
    android:weightSum="1">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >



    </TableRow>


    <TableRow
        android:id="@+id/itableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@mipmap/default_image_profile"
            android:background="@mipmap/default_image_profile"
            android:scaleType="centerCrop"
            style="@android:style/Widget.Holo.ImageButton" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewUsername"
                android:text="Username"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp" />

            <TextView
                android:id="@+id/textViewFollowers"
                android:text="Followers :      "
                android:textSize="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/textViewUsername"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/textViewNumFollowers"
                android:text="0"
                android:textSize="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textViewUsername"
                android:layout_alignEnd="@+id/textViewFollowers"/>




        </RelativeLayout>

    </TableRow>



    <Button
        android:id="@+id/btnImage"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Cambia immagine"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        />


    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textViewEta"
            android:text="EtÃ "
            android:textSize="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <EditText
            android:id="@+id/editTextEta"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF27BA58"
        android:layout_width="wrap_content" />

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textViewTel"
            android:text="Telefono"
            android:textSize="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <EditText
            android:id="@+id/editTextTele"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF27BA58"
        android:layout_width="wrap_content" />

    <RelativeLayout android:layout_weight="0.72"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="411dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salva"
            android:textColor="#ffffff"
            android:background="@drawable/mybutton"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="150dp" />
    </RelativeLayout>



</TableLayout>
